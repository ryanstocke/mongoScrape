<div class="modal" id="modal">
  <div class="modal-content">
    <span onclick="location.href='/'" class="close">&times;</span>
    <p id="modal-text"></p>
  </div>
</div>

<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <p>R/PathOfExile</p>
  </div>
</div>
<div class="container-fluid article-container">

  <ul class="unsaved">
    {{#if articles}}
    {{#each articles}}
    <li class="article-container container-fluid card" data-article-id={{_id}}>
      <div class="a-content card-header">
        <div class="a-title"><a class="a-title" target="_blank" href={{link}}>{{title}}</a></div>
        <hr>
        <button class="save-article">Save Article</button>
        <button class="delete-article">Delete Article</button>
      </div>
    </li>

    {{/each}}
    {{/if}}
    {{#unless articles}}
    <li class="article-container container-fluid">
      It doesn't look like there are any articles. How about you click the "Scrape" button!
    </li>
    {{/unless}}
  </ul>

  <footer class="footer">
    <div class="container">
      <p>Mongo Scraper R/PathOfExile</p>
    </div>
  </footer>

  <div class="modal" id="modal">
    <div class="modal-content">
      <span onclick="location.href='/'" class="close">&times;</span>
      <p id="modal-text"></p>
    </div>
  </div>